{
  "name": "happyhour-csv-validator",
  "version": "1.0.0",
  "description": "CSV validation and publishing system for happy hour data",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run validate && npm run generate",
    "validate": "node dist/index.js validate",
    "generate": "node dist/index.js generate",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "csv",
    "validation",
    "happy-hour"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "csv-parse": "^5.5.0",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
